<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/primary_light"
    app:strokeWidth="0.8dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Icon Container -->
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_primary_light"
            android:gravity="center"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/ivRiwayatIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_history"
                app:tint="@color/primary"/>
        </LinearLayout>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title and Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRiwayatTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transfer ke Bank BCA"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Transfer ke Bank BCA"/>

            </LinearLayout>

            <!-- Type and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRiwayatType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer Bank"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_medium"
                    tools:text="Transfer Bank"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="6dp"
                    android:background="@color/text_secondary"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvRiwayatStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berhasil"
                    android:textColor="@color/success"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_medium"
                    tools:text="Berhasil"/>
            </LinearLayout>

            <!-- Date -->
            <TextView
                android:id="@+id/tvRiwayatDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="12 Jun 2023 • 14:30"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                tools:text="12 Jun 2023 • 14:30"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>